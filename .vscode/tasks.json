{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "multi-elf C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/build/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"label": "cmake: configure (debug)",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S", ".",
				"-B", "build",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": "build",
			"problemMatcher": "$gcc",
			"detail": "Configure CMake for Debug"
		},
		{
			"label": "cmake: build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": "$gcc",
			"detail": "Build project",
			"dependsOn": "cmake: configure (debug)"
		},
		{
			"label": "cmake: clean",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"build"
			],
			"problemMatcher": []
		}
	]
}